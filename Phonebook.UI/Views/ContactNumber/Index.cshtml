@model IEnumerable<Phonebook.Domain.Model.ContactNumber>

@{
    ViewBag.Title = "Contact Numbers - For " + @ViewBag.ContactName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contact Numbers - For @ViewBag.ContactName</h2>

<p>
    @Html.ActionLink("Add New Contact Number", "ManageContactNumber", new { ContactNumberId = Guid.Empty, ContactId = ViewBag.ContactId }) 
</p>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TelephoneNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TelephoneNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "ManageContactNumber", new { ContactNumberId = item.Id, ContactId = item.ContactId }) |
            @Html.ActionLink("Delete", "DeleteContactNumber", new { ContactNumberId = item.Id, ContactId = item.ContactId }, new { onclick = "return confirm('Are you sure you want to delete this contact number?');" })
        </td>
    </tr>
}
</table>

@Html.ActionLink("Back to Contacts", "Index", "Contact", new { UserId = ViewBag.UserId }, new { @class = "cancelButton" })