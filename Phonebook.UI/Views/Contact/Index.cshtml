@model IEnumerable<Phonebook.Domain.Model.Contact>

@{
    ViewBag.Title = "My Contacts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Contacts</h2>

<p>@Html.ActionLink("Add New Contact", "ManageContact", new { ContactId = Guid.Empty, UserId = ViewBag.UserId }) </p>

<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Forename)</th>
            <th>@Html.DisplayNameFor(model => model.Surname)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Forename)</td>
                <td>@Html.DisplayFor(modelItem => item.Surname)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    @Html.ActionLink("View Contact Numbers", "Index", "ContactNumber", new { ContactId = item.Id, UserId = ViewBag.UserId }, null) | 
                    @Html.ActionLink("Edit", "ManageContact", new { ContactId = item.Id, UserId = ViewBag.UserId }) | 
                    @Html.ActionLink("Delete", "DeleteContact", new { ContactId = item.Id, UserId = ViewBag.UserId}, new { onclick = "return confirm('Are you sure you want to delete this contact?');" })
                </td>
            </tr>
        }
    </thead>

</table>